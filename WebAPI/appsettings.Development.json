{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": ""
  },
  "Seed": {
    "Run": true,
    "ApplyMigrations": true,
    "AllowInProduction": false,
    "Roles": [
      "Admin",
      "User"
    ],
    "Admin": {
      "Email": "admin@studentgamerhub.com",
      "Password": "Admin@123",
      "FullName": "System Administrator",
      "ForceResetPassword": false,
      "EnsureAdminRole": true
    },
    "ComprehensiveSeeding": {
      "SeedSampleUsers": true,
      "SeedCommunities": true,
      "SeedClubsAndRooms": true,
      "SeedEvents": true,
      "SeedWalletsAndTransactions": true,
      "SeedFriendships": true,
      "SeedGifts": true,
      "SeedBugReports": true,
      "MaxSampleUsers": 25,
      "MaxCommunities": 12,
      "MaxEvents": 20,
      "MaxBugReports": 30,
      "MaxFriendLinks": 40
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7163",
      "https://fe-student-gamer-hub.vercel.app",
      "http://localhost:5173"
    ]
  },
  "JwtSettings": {
    "ValidAudience": "UserManager",
    "ValidIssuer": "http://localhost:7226",
    "Expires": 120,
    //"RefreshTokenDays": 7,
    "Key": "<use User Secret>"
  },
  "Email": {
    "Provider": "Smtp",
    "DefaultFrom": "tinvtse@gmail.com",
    "DefaultFromName": "StudentGamerHub",
    "File": {
      "PickupDirectory": "App_Data/mails"
    },
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "User": "gamil user",
      "Password": "<app-password in user-secrets>",
      "UseStartTls": true,
      "UseSsl": false,
      "TimeoutSeconds": 30
    }
  },
  "AuthLinks": {
    "PublicBaseUrl": "http://localhost:5173",
    "ConfirmEmailPath": "/auth/confirm-email",
    "ResetPasswordPath": "/auth/reset-password",
    "ChangeEmailPath": "/auth/confirm-change-email"
  },
  "GoogleAuth": {
    "ClientId": "YOUR_GOOGLE_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "AllowedHostedDomain": ""
  },
  "Presence": {
    "TtlSeconds": 60,
    "HeartbeatSeconds": 30,
    "KeyPrefix": "sg",
    "GraceSeconds": 5,
    "MaxBatchSize": 200,
    "DefaultPageSize": 100,
    "MaxPageSize": 500
  },
  "Chat": {
    "HistoryMax": 200,
    "HistoryTtlHours": 48,
    "RateLimitWindowSeconds": 30,
    "RateLimitMaxMessages": 30
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Billing": {
    "EventCreationFeeCents": 50000,
    "MaxEventEscrowTopUpAmountCents": 50000000,
    "MaxWalletTopUpAmountCents": 20000000
  },
  "VnPay": {
    "TmnCode": "<from user-secrets>",
    "HashSecret": "<from user-secrets>",
    "BaseUrl": "https://sandbox.vnpayment.vn/paymentv2/vpcpay.html",
    "ApiUrl": "https://sandbox.vnpayment.vn/merchant_webapi/api/transaction",
    "ReturnUrlOrder": "https://localhost:7266/api/Payments/vnpay/return",
    "ReturnUrlCustomDesign": "https://localhost:7266/api/custom-design-payments/vnpay/return",
    "ReturnUrl": "https://localhost:7266/api/Payments/vnpay/return",
    "Version": "2.1.0",
    "CurrCode": "VND",
    "Locale": "vn"
  }
}
