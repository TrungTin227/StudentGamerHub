{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": "Host=<host>;Port=5432;Database=<db>;Username=<user>;Password=<password>;SSL Mode=Require;Trust Server Certificate=true"
  },

  "Seed": {
    "Run": true,
    "ApplyMigrations": true,
    "AllowInProduction": true,
    "Roles": [
      "Admin",
      "User"
    ],
    "Admin": {
      "Email": "admin@your-domain.com",
      "Password": null,
      "FullName": "Administrator",
      "ForceResetPassword": false,
      "EnsureAdminRole": true
    },
    "ComprehensiveSeeding": {
      "SeedSampleUsers": false,
      "SeedCommunities": false,
      "SeedClubsAndRooms": false,
      "SeedEvents": false,
      "SeedWalletsAndTransactions": false,
      "SeedFriendships": false,
      "SeedGifts": false,
      "SeedBugReports": false,
      "MaxSampleUsers": 0,
      "MaxCommunities": 0,
      "MaxEvents": 0,
      "MaxBugReports": 0,
      "MaxFriendLinks": 0
    }
  },

  "JwtSettings": {
    "ValidAudience": "UserManager",
    "ValidIssuer": "https://student-gamer-hub.onrender.com",
    "Expires": 120,
    "Key": "<32+ chars random secret>"
  },

  "Email": {
    "Provider": "Resend",
    "DefaultFrom": "no-reply@your-domain.com",
    "DefaultFromName": "StudentGamerHub"
  },
  "Resend": {
    "ApiKey": "<resend_api_key>"
  },

  "AuthLinks": {
    "PublicBaseUrl": "https://fe-student-gamer-hub.vercel.app",
    "ConfirmEmailPath": "/auth/confirm-email",
    "ResetPasswordPath": "/auth/reset-password",
    "ChangeEmailPath": "/auth/confirm-change-email"
  },

  "GoogleAuth": {
    "ClientId": "<google_oauth_client_id>",
    "AllowedHostedDomain": ""
  },

  "Presence": {
    "TtlSeconds": 60,
    "HeartbeatSeconds": 30,
    "KeyPrefix": "sg",
    "GraceSeconds": 5,
    "MaxBatchSize": 200,
    "DefaultPageSize": 100,
    "MaxPageSize": 500
  },

  "Redis": {
    "ConnectionString": "<redis_host>:6379,password=<password>,ssl=False,abortConnect=False"
  },

  "Billing": {
    "EventCreationFeeCents": 50000,
    "PlatformUserEmail": "platform@studentgamerhub.local",
    "PlatformUserName": "Platform Wallet",
    "MaxEventEscrowTopUpAmountCents": 50000000,
    "MaxWalletTopUpAmountCents": 20000000
  },

  "PayOS": {
    "ClientId": "<payos_client_id>",
    "ApiKey": "<payos_api_key>",
    "SecretKey": "<payos_webhook_or_checksum_secret>",
    "BaseUrl": "https://api-merchant.payos.vn",
    "ReturnUrl": "https://student-gamer-hub.onrender.com/api/payments/payos/return",
    "WebhookUrl": "https://student-gamer-hub.onrender.com/api/payments/payos/webhook",
    "CancelUrl": "https://student-gamer-hub.onrender.com/api/payments/payos/return",
    "FrontendBaseUrl": "https://fe-student-gamer-hub.vercel.app"
  },

  "Realtime": {
    "ChatPath": "/ws/chat"
  }
}
