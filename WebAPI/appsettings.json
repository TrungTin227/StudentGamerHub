{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Email": {
    "Provider": "Resend",
    "DefaultFrom": "onboarding@resend.dev",
    "DefaultFromName": "StudentGamerHub"
  },
  "Resend": {
    "ApiKey": ""
  },
  "AuthLinks": {
    "PublicBaseUrl": "",
    "ConfirmEmailPath": "/auth/confirm-email",
    "ResetPasswordPath": "/auth/reset-password",
    "ChangeEmailPath": "/auth/confirm-change-email"
  },
  "Presence": {
    "TtlSeconds": 60,
    "HeartbeatSeconds": 30,
    "KeyPrefix": "sg",
    "GraceSeconds": 5,
    "MaxBatchSize": 200,
    "DefaultPageSize": 100,
    "MaxPageSize": 500
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Billing": {
    "EventCreationFeeCents": 50000,
    "MaxEventEscrowTopUpAmountCents": 50000000,
    "MaxWalletTopUpAmountCents": 20000000
  },
  "PayOS": {
    "ClientId": "your_client_id_here",
    "ApiKey": "your_api_key_here",
    "SecretKey": "your_checksum_key_here",
    "BaseUrl": "https://api.payos.vn/v1",
    "ReturnUrl": "https://localhost:7227/api/payments/payos/return",
    "WebhookUrl": "https://localhost:7227/api/payments/payos/webhook"
  }
}
